    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "mongodb-memory-server": "^6.5.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^3.4.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.3",
    "mongodb": "^3.5.7",
